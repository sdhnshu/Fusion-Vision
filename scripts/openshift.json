{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "fusion-vision",
        "annotations": {
            "openshift.io/display-name": "Fusion Vision",
            "description": "Empowering artists with the power of StyleGAN2",
            "tags": "fastapi,python",
            "iconClass": "icon-python",
            "openshift.io/long-description": "This template defines resources needed for Fusion Vision, including a build configuration and application deployment configuration",
            "openshift.io/provider-display-name": "Sudhanshu Passi",
            "openshift.io/documentation-url": "https://github.com/sdhnshu/Fusion-Vision",
            "openshift.io/support-url": "https://github.com/sdhnshu/Fusion-Vision/issues",
            "template.openshift.io/bindable": "false"
        }
    },
    "message": "The following service(s) have been created in your project: ${NAME}.\n\nFor more information about using this template, see https://github.com/sdhnshu/Fusion-Vision/blob/master/README.md.",
    "labels": {
        "template": "fusion-vision",
        "app": "fusion-vision"
    },
    "objects": [
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            },
            "stringData": {
                "database-password": "${DATABASE_PASSWORD}"
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "web",
                        "port": 8000,
                        "targetPort": 8000
                    }
                ],
                "selector": {
                    "name": "${NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}"
            },
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "description": "Defines how to build the application",
                    "template.alpha.openshift.io/wait-for-ready": "true"
                }
            },
            "spec": {
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY_URL}",
                        "ref": "${SOURCE_REPOSITORY_REF}"
                    },
                    "contextDir": "${CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:3.6"
                        },
                        "env": [
                            {
                                "name": "PIP_INDEX_URL",
                                "value": "${PIP_INDEX_URL}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${NAME}:latest"
                    }
                },
                "triggers": [
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${GITHUB_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "postCommit": {
                    "script": "echo 'run tests here'"
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "annotations": {
                    "description": "Defines how to deploy the application server",
                    "template.alpha.openshift.io/wait-for-ready": "true"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "fusion-vision"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 2,
                "selector": {
                    "name": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "name": "${NAME}",
                        "labels": {
                            "name": "${NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "fusion-vision",
                                "image": " ",
                                "ports": [
                                    {
                                        "containerPort": 8000
                                    }
                                ],
                                "readinessProbe": {
                                    "timeoutSeconds": 3,
                                    "initialDelaySeconds": 3,
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8000
                                    }
                                },
                                "livenessProbe": {
                                    "timeoutSeconds": 3,
                                    "initialDelaySeconds": 30,
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8000
                                    }
                                },
                                "env": [
                                    {
                                        "name": "DATABASE_SERVICE_NAME",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${NAME}",
                                                "key": "database-password"
                                            }
                                        }
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MEMORY_LIMIT}"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "The name assigned to all of the frontend objects defined in this template.",
            "required": true,
            "value": "fusion-vision"
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "required": true,
            "description": "Maximum amount of memory the container can use.",
            "value": "1024Mi"
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "required": true,
            "description": "The URL of the repository with your application source code.",
            "value": "https://github.com/sdhnshu/Fusion-Vision"
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch.",
            "value": "openshift"
        },
        {
            "name": "CONTEXT_DIR",
            "displayName": "Context Directory",
            "description": "Set this to the relative path to your project if it is not in the root of your repository.",
            "value": "/"
        },
        {
            "name": "APPLICATION_DOMAIN",
            "displayName": "Application Hostname",
            "description": "The exposed hostname that will route to the service, if left blank a value will be defaulted.",
            "value": ""
        },
        {
            "name": "GITHUB_WEBHOOK_SECRET",
            "displayName": "GitHub Webhook Secret",
            "description": "Github trigger secret.  A difficult to guess string encoded as part of the webhook URL.  Not encrypted.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{40}"
        },
        {
            "name": "DATABASE_SERVICE_NAME",
            "displayName": "Database Service Name",
            "required": true,
            "value": "postgresql"
        },
        {
            "name": "DATABASE_PASSWORD",
            "displayName": "Database User Password",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}"
        },
        {
            "name": "PIP_INDEX_URL",
            "displayName": "Custom PyPi Index URL",
            "description": "The custom PyPi index URL",
            "value": ""
        }
    ]
}